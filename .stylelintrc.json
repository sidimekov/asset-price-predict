{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-tailwindcss",
    "stylelint-config-prettier-scss"
  ],
  "overrides": [
    {
      "files": ["**/*.scss"],
      "customSyntax": "postcss-scss"
    }
  ],
  "rules": {
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["theme", "utility", "variant", "config", "layer"]
      }
    ]
  }
}
